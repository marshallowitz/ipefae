@model List<TGV.IPEFAE.Web.BL.Data.ConcursoModel>

@if (Model.Count > 0)
{
    <table id="tblConcursos" class="table table-striped table-bordered table-hover" summary="Lista de Concursos">
        <caption>Lista de Concursos</caption>
        <thead>
            <tr>
                <th scope="col">Código</th>
                <th scope="col">Nome</th>
                <th scope="col">Data</th>
                <th scope="col" style="width: 120px;"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (TGV.IPEFAE.Web.BL.Data.ConcursoModel concurso in Model)
            {
                <tr>
                    <td><span>@concurso.codigo</span></td>
                    <td>@concurso.nome</td>
                    <td>@concurso.data_formatada</td>
                    <td class="row acao">
                        <div class="col-md-3" style="padding: 0px;" onclick="gerarRPA('@concurso.id')"><div class="icons download-remessa" title="RPA"></div></div>
                        <div class="col-md-3" style="padding: 0px;" onclick="gerarListaColaboradores('@concurso.id')"><div class="icons excel" title="Lista Colaboradores"></div></div>
                        <div class="col-md-3" style="padding: 0px;" onclick="editar('@concurso.id')"><div class="icons editar" title="Editar"></div></div>
                        <div class="col-md-3" style="padding: 0px;" onclick="excluir('@concurso.id')"><div class="icons excluir" title="Excluir"></div></div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <table class="table table-striped table-bordered table-hover" summary="Nenhum concurso foi encontrado">
        <thead>
            <tr>
                <th scope="col">Nenhum concurso foi encontrado</th>
            </tr>
        </thead>
    </table>
}