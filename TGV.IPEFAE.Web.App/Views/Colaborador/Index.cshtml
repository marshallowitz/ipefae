@{ Layout = "~/Views/Shared/_LayoutLogado.cshtml"; }
<link href="@Url.Content("~/Content/Colaborador.css?v=" + TGV.IPEFAE.Web.App.Controllers.BaseController.VersionNumber)" rel="stylesheet" type="text/css">
<script src="@Url.Content("~/Scripts/Views/Colaborador.js?v=" + TGV.IPEFAE.Web.App.Controllers.BaseController.VersionNumber)"></script>

<script>
    $(function () { iniciarTelaInicialColaborador(); });
</script>

<h2 class="titulo">Identificação - Colaborador</h2>

<div class="container">
    <div class="row centro">
        <form id="colLoginForm" class="colLoginForm">
            <div class="col-xs-12 col-md-6">
                <div class="col-xs-12 subtitest">
                    Já Tenho Cadastro
                </div>
                <div class="col-xs-12">
                    <div class="row">
                        <div class="col-md-8 form-group">
                            <label>E-mail</label>
                            <input type="text" id="txtEmail" name="email" placeholder="Digite seu e-mail" class="form-control" autofocus />
                        </div>
                        <div class="col-md-8 form-group">
                            <label>Senha</label>
                            <input type="password" id="txtSenha" name="senha" style="max-width: inherit;" class="form-control" />
                            <a href="myModal" role="button" style="font-size: 13px;" title="Esqueci minha senha" data-toggle="modal" data-target=".modal-reenviar-senha">Esqueci minha senha</a>
                        </div>
                    </div>
                </div>
                <div class="col-xs-12 form-group text-center">
                    <input id="btnLogin" type="submit" class="btn btn-success" value="Continuar" />
                </div>
            </div>
            <div class="col-xs-12 col-md-6">
                <div class="col-xs-12 subtitest">
                    Não Tenho Cadastro
                </div>
                <div class="col-xs-12 direita">
                    <ul>
                        <li>Cadastre-se aqui para colaborar nos próximos concursos</li>
                        @*<li>xxxx</li>*@
                        <li>Mantenha seus dados sempre atualizados</li>
                    </ul>
                </div>
                <div class="col-xs-12 form-group text-center">
                    <input id="btnCadastro" type="button" class="btn btn-success" value="Criar Cadastro" onclick="window.location.href='@Url.Content("~/Colaborador/Cadastro")';" />
                </div>
            </div>
        </form>
    </div>
</div>

<div class="modal fade modal-reenviar-senha" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog" style="transform: translateY(50%);">
        <div class="modal-content">
            <div class="row">
                <div class="col-md-12 modal-reenviar-senha-white">
                    <form id="cpfForm" class="cpfForm" method="POST">
                        <div class="row" style="margin-top: 10px;">
                            <div class="col-md-3"></div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label style="font-size: 12px;">Digite seu CPF para receber sua senha</label>
                                    <input type="text" class="form-control" name="cpf" id="txtCPF" />
                                </div>
                            </div>
                            <div class="col-md-3"></div>
                        </div>
                        <div class="row" style="height: 20px;">
                            <div class="col-md-3"></div>
                            <div class="col-md-6">
                                <div class="mensagem erro cpf-nao-encontrado" style="display: none; font-size: 12px; margin-top: 0px; ">CPF não encontrado</div>
                            </div>
                            <div class="col-md-3"></div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-md-12 text-center">
                                <input type="button" name="btnCancelar" id="btnCancelar" class="btn btn-personal1 btn-lg" value="Cancelar" onclick="$('.modal-reenviar-senha').modal('hide');" />
                                <input type="submit" name="btnEnviarEmail" id="btnEnviarEmail" class="btn btn-success btn-lg" value="Recuperar Senha" />
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
