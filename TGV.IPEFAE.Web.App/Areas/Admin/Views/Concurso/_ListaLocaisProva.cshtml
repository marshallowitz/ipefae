@model List<TGV.IPEFAE.Web.BL.Data.ConcursoLocalModel>

@if (Model.Count > 0)
{
    <table id="tblLocais" class="table table-striped table-bordered table-hover" summary="Lista de Locais de Prova">
        <caption>Lista de Locais de Prova</caption>
        <thead>
            <tr>
                <th scope="col" style="display: none;">#</th>
                <th scope="col">Nome</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (TGV.IPEFAE.Web.BL.Data.ConcursoLocalModel concurso in Model)
            {
                <tr>
                    <td style="display: none;"><span>@concurso.id</span></td>
                    <td>@concurso.local</td>
                    <td class="acao">
                        <div class="icons editar" title="Editar"></div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <table class="table table-striped table-bordered table-hover" summary="Nenhum local de prova foi encontrado">
        <thead>
            <tr>
                <th id="localNaoEncontrado" scope="col" ng-show="concurso.id > 0">Nenhum local de prova foi encontrado</th>
                <th id="localNaoEncontradoSemConcurso" scope="col" ng-show="concurso.id <= 0">Salve o concurso para adicionar locais de prova</th>
            </tr>
        </thead>
    </table>
}