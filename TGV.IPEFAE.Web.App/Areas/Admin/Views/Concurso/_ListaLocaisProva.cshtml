@model List<TGV.IPEFAE.Web.BL.Data.ConcursoLocalModel>

<table id="tblLocais" class="table table-striped table-bordered table-hover" summary="Lista de Locais de Prova" ng-show="concurso.locais.length > 0">
    <thead>
        <tr>
            <th scope="col" style="display: none;">#</th>
            <th scope="col">Local da Prova</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        <tr ng-repeat="local in concurso.locais">
            <td>
                <div class="tooltip-error">
                    <input type="text" ng-model="local.local" class="form-control ipt-funcao" ng-class="local.modoEdicao ? '' : 'input-as-span'" maxlength="100" ng-readonly="!local.modoEdicao" required />
                    <span class="tooltiptext" ng-class="local.local_enabled ? '' : 'hidden'">O nome do local de prova é obrigatório</span>
                </div>
            </td>
            <td class="text-center" style="cursor: pointer; vertical-align: middle;">
                @*<div class="fas fa-lg fa-save" title="Salvar" ng-show="local.modoEdicao" ng-click="local_salvar(local)"></div>
                <div class="fas fa-lg fa-times" title="Cancelar" ng-show="local.modoEdicao" ng-click="local_editar(local, false)"></div>*@
                <div class="fas fa-lg fa-edit" title="Editar" ng-show="!local.modoEdicao" ng-click="local_editar(local, true)"></div>
                <div class="fas fa-lg fa-trash-alt" title="Excluir" ng-show="!local.modoEdicao" ng-click="local_excluir(local.id)"></div>
            </td>
        </tr>
    </tbody>
</table>
<table class="table table-striped table-bordered table-hover" summary="Nenhum local de prova foi encontrado" ng-show="concurso.locais.length <= 0">
    <thead>
        <tr>
            <th id="localNaoEncontrado" scope="col" ng-show="concurso.id > 0">Nenhum local de prova foi encontrado</th>
            <th id="localNaoEncontradoSemConcurso" scope="col" ng-show="concurso.id <= 0">Salve o concurso para adicionar locais de prova</th>
        </tr>
    </thead>
</table>
